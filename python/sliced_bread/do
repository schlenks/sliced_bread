#! /bin/bash

set -e

app-installs() {
  echo "ğŸš§ Do: pip install"
  pip-install
  echo "ğŸš§ Do: Installs finished."
}

build() {
  echo "ğŸš§ Do: Building docker containers."
  COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker-compose build app_python
}

pip-install() {
  echo "ğŸš§ Do: Run pip install."
  docker-compose run --rm app_python python -m pip install -r requirements.txt
}

migrate-db() {
  echo "ğŸš§ Do: Running migrations"
  docker-compose run --rm app_python python manage.py migrate
}

perf() {
  echo "ğŸ  Do: Performance benchmarking"
  ab -c 30 -n 12000 "http://127.0.0.1:3001/"
}

test() {
  if [[ -z "$ACTION_ARG" ]]
  then
    echo "ğŸ§ª Do: Running all tests"
    docker-compose run --rm app_python python manage.py test
  else
    echo "ğŸ§ª Do: Running your single test ğŸ‘‰ $ACTION_ARG"
    docker-compose run --rm app_python python manage.py test $ACTION_ARG
  fi
}

start() {
  docker-compose up
}

stop() {
  echo "âœ‹ Do: Stopping docker containers."
  docker-compose stop
}

shell() {
  case "${ACTION_ARG}" in
    app)
      echo "ğŸš Do: Open a shell on the app_python container."
       docker-compose run --rm app_python bash
    ;;
    *)
      echo "âš ï¸  Unknown action. Please use 'app' or 'db' with the shell command."
    ;;
  esac
}

echo "ğŸ Welcome to Sliced Bread (Python/Django) ğŸ"
ACTION=$1
ACTION_ARG=$2

case "${ACTION}" in
  build)
    stop
    build
    app-installs
    echo "ğŸ‘ Build complete."
  ;;
  install)
    app-installs
  ;;
  migrate)
    migrate-db
  ;;
  perf)
    perf
  ;;
  shell)
    shell
  ;;
  start)
    stop
    start
  ;;
  stop)
    stop
  ;;
  test)
    test
  ;;
  *)
    echo "âš ï¸  Unknown action. Please use 'build', 'install', 'migrate', 'perf', 'test', 'shell', 'start', 'stop'"
  ;;
esac
